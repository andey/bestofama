<h1>Listing comments</h1>

<table class="table">
  <tr>
    <th>Key</th>
    <th>Parent key</th>
    <th>User</th>
    <th>Date</th>
    <th></th>
    <th></th>
  </tr>

  <% @comments.each do |comment| %>
      <tr>
        <td id="<%= comment.key %>"><%= comment.key %></td>
        <td><%= link_to comment.parent_key, "##{comment.key}" %></td>
        <td><%= link_to comment.user.username, admin_user_path(comment.user) %></td>
        <td><%= comment.date %></td>
        <td><%= link_to 'Show', admin_ama_comment_path(@ama, comment) %></td>
        <td><%= link_to 'Destroy', admin_ama_comment_path(@ama, comment), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<div class="pagination-centered">
  <%= will_paginate @comments %>
</div>

