.row
  .col-span-12
    h1= @op.name
    p
      b Created at:&nbsp;
      = @op.created_at
    p
      b Updated at:&nbsp;
      = @op.updated_at
    p
      b Avatar:&nbsp;
      = @op.avatar
    p
      b Slug:&nbsp;
      = @op.slug
    p
      b Tags:&nbsp;
      = @op.tag_list.map { |t| link_to t, tag_path(t) }.join(', ').html_safe
    p
      b Content:&nbsp;
      = @op.content
.row
  .col-span-8
    h3 Users
  .col-span-4
    = link_to 'Add User',  new_admin_op_user_path(@op), :class => 'btn btn-mini pull-right', :style => 'margin-top: 20px;'
  .col-span-12
    table.table
      tr
        th Username
        th Link
        th Comment
        th AMAs
        th
        th
        th
      - @op.users.uniq.each do |user|
        tr
          td= user.username
          td= user.link_karma
          td= user.comment_karma
          td= user.amas.count
          td.span1= link_to 'Show', admin_user_path(user)
          td.span1= link_to 'Edit', edit_admin_user_path(user)
          td.span1= link_to 'Destroy', admin_op_user_path(@op, user), :method => :delete, :data => {:confirm => 'Are you sure?'}
